{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "pythonVersion": "3.9",
        "includeFiles": ["alembic/**", "requirements.txt"]
      }
    }
  ],
  "routes": [
    { "src": "/docs", "dest": "/api/app.py" },
    { "src": "/openapi.json", "dest": "/api/app.py" },
    { "src": "/redoc", "dest": "/api/app.py" },
    { "src": "/(.*)", "dest": "/api/app.py" }
  ]
}