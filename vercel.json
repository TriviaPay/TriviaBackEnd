{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "pythonVersion": "3.12",
        "postInstallCommand": "bash api/postinstall.sh",
        "includeFiles": [
          "api/postinstall.sh",
          "api/requirements.txt",
          "requirements.txt"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ]
}