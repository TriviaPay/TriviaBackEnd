# Application environment
ENVIRONMENT=development

# Database settings
DATABASE_URL=postgresql://username:password@localhost:5432/triviapay

# Descope Authentication
DESCOPE_PROJECT_ID=your_descope_project_id
DESCOPE_MANAGEMENT_KEY=your_descope_management_key

# Internal API Configuration (for external cron services)
INTERNAL_SECRET=your-super-secret-key-change-this-in-production

# Draw Configuration (for local development scheduler)
DRAW_TIME_HOUR=20
DRAW_TIME_MINUTE=0
DRAW_TIMEZONE=US/Eastern

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Development Admin (optional)
DEV_ADMIN_SECRET=your_dev_admin_secret

# Logging
LOG_LEVEL=INFO

# Environment-Specific Behavior:
# - development: APScheduler runs locally for automated tasks
# - production: APScheduler disabled, external cron services call internal API endpoints
