# Docker compose environment defaults (no production secrets).
# Container runtime overrides live in docker-compose.yml via DOCKER_* variables.

ENVIRONMENT=production
APP_ENV=production
LOG_LEVEL=INFO

# Internal API Configuration (for external cron services)
INTERNAL_SECRET=change-me

# Descope Authentication
DESCOPE_PROJECT_ID=
DESCOPE_MANAGEMENT_KEY=

# Stripe Configuration
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Draw Configuration
DRAW_TIME_HOUR=20
DRAW_TIME_MINUTE=0
DRAW_TIMEZONE=US/Eastern

# Development Admin (optional)
DEV_ADMIN_SECRET=

# IAP (optional)
APPLE_IAP_SHARED_SECRET=
APPLE_IAP_USE_SANDBOX=false
GOOGLE_IAP_SERVICE_ACCOUNT_JSON=
GOOGLE_IAP_PACKAGE_NAME=com.triviapay.app
